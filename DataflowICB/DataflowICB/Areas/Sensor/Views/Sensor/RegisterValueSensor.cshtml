
@model SensorViewModel

@using (Ajax.BeginForm("CreateSensor", "Sensor",
                new AjaxOptions
                {
                    HttpMethod = "POST",
                    UpdateTargetId = "form-container",
                    InsertionMode = InsertionMode.Replace
                }))
{
    @Html.ValidationSummary(false)

    @Html.AntiForgeryToken()
    @Html.Partial("_CommonSensorForm", Model)

          @Html.LabelFor(m => m.ValueTypeSensor.MinValue)
        @Html.EditorFor(m => m.ValueTypeSensor.MinValue, new { @type = "number", @class = "text-danger" })
        @Html.ValidationMessageFor(m => m.ValueTypeSensor.MinValue)
        <br />
        @Html.LabelFor(m => m.ValueTypeSensor.Maxvalue)
        @Html.EditorFor(m => m.ValueTypeSensor.Maxvalue, new { @type = "number", @class = "text-danger" })
        @Html.ValidationMessageFor(m => m.ValueTypeSensor.Maxvalue)

    <input type="submit" value="Register" class="btn btn-info btn-block" />
}

