@model SensorViewModel

<h2>Edit Sensor...</h2>

@using (Html.BeginForm("EditSensor", "Sensor", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(m => m.Id)
    <div>
        @Html.LabelFor(m => m.Name)
        @Html.EditorFor(m => m.Name)
    </div>
    <div>
        @Html.LabelFor(m => m.Description)
        @Html.EditorFor(m => m.Description)
    </div>
    <div>
        @Html.LabelFor(m => m.Url)
        @Html.EditorFor(m => m.Url)
    </div>
    <div>
        @Html.LabelFor(m => m.PollingInterval)
        @Html.EditorFor(m => m.PollingInterval)
    </div>
    <div>
        @Html.LabelFor(m => m.IsValueType)
        @Html.EditorFor(m => m.IsValueType)
    </div>
    <div>
        @Html.LabelFor(m => m.MeasurementType)
        @Html.EditorFor(m => m.MeasurementType)
    </div>
    <div>
        @Html.LabelFor(m => m.IsPublic)
        @Html.EditorFor(m => m.IsPublic)
    </div>
    <div>
        @Html.LabelFor(m => m.IsShared)
        @Html.EditorFor(m => m.IsShared)
    </div>

    if (Model.IsValueType)
    {
        <div>
            @Html.LabelFor(m => m.MinValue)
            @Html.EditorFor(m => m.MinValue)
        </div>
        <div>
            @Html.LabelFor(m => m.MaxValue)
            @Html.EditorFor(m => m.MaxValue)
        </div>
    }

    <div>
        <input type="submit" value="Save" />
    </div>
}
